-- Patterns to match for all filetypes
-- Can be a comma-separated string or a list of strings
-- Default value:
vim.g.Hexokinase_optInPatterns = { 'full_hex', 'rgb', 'rgba', 'hsl', 'hsla', 'colour_names' }

-- Filetype specific patterns to match
-- entry value must be a comma-separated list
vim.g.Hexokinase_ftOptInPatterns = {
    css = 'full_hex,rgb,rgba,hsl,hsla,colour_names',
    html = 'full_hex,rgb,rgba,hsl,hsla,colour_names'
}

-- Sample value, to keep default behavior don't define this variable
vim.g.Hexokinase_ftEnabled = { 'css', 'html', 'javascript', 'tsx', 'svelte' }


print("LOADED: Hexokinase conf")
