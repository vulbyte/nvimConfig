" Use tabs instead of spaces
setlocal noexpandtab

" Set the width of a tab character
setlocal tabstop=2

" Set the number of spaces that a <Tab> counts for while performing editing operations
setlocal shiftwidth=2

" Optional: Set the number of spaces that a <Tab> in the file counts for
setlocal softtabstop=2

" Optional: Ensure indentation uses tabs even in auto-indentation
setlocal smarttab
